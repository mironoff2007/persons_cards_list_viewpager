<?xml version="1.0" encoding="utf-8"?>
<merge>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/partResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/part_result_items_marginTop"
            android:src="@drawable/search_glass" />

        <TextView
            android:id="@+id/resultTextTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/part_result_items_marginTop"
            android:gravity="center_horizontal"
            android:text="@string/nobody_found"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/part_result_textSize" />

        <TextView
            android:id="@+id/resultTextMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/part_result_items_marginTop"
            android:gravity="center_horizontal"
            android:text="@string/correct_your_search"
            android:textAlignment="center"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/part_result_textSize" />

        <TextView
            android:id="@+id/resultTextBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/part_result_items_marginTop"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/part_result_textSize" />

    </LinearLayout>

</merge>